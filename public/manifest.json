{
  "name": "DragonQuest X Omoide Album Downloader",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://hiroba.dqx.jp/sc/character/*/picture/*"
      ],
      "js": [
        "content_scripts.js"
      ]
    }
  ],
  "permissions": [
    "background",
    "downloads"
  ]
}
